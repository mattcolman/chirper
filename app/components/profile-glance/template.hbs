<!-- app/components/profile-glance/template.hbs -->

<!-- Now, we have access to all that data through the "user"-key -->
<div class="cover-photo"></div>
<img class="avatar" src="/images/avatar.jpg" data-profile-image="me"/>
{{#link-to "user" user.username}}
  {{user.username}}
{{/link-to}}
<ul class="profile-stats">
  <li>
    <h4>Chirps</h4>
    <p>{{chirp.text}}</p> <!-- ...here -->
  </li>
  <li>
    <h4>Following</h4>
    <p>{{user.numberOfFollowing}}</p> <!-- ...here -->
  </li>
  <li>
    <h4>Followers</h4>
    <p>{{user.numberOfFollowers}}</p> <!-- ...and here -->
  </li>
</ul>